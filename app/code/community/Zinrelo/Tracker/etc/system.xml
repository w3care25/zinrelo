<config>
  <tabs>
    <zinrelo_tracker translate="label" module="tracker">
      <label>zinrelo tracker</label>
      <sort_order>301</sort_order>
    </zinrelo_tracker>
  </tabs>
  <sections>
    <tracker  translate="label" module="tracker">
      <label>Settings</label>
      <tab>zinrelo_tracker</tab>
      <frontend_type>text</frontend_type>
      <sort_order>1</sort_order>
      <show_in_default>1</show_in_default>
      <show_in_website>1</show_in_website>
      <show_in_store>1</show_in_store>
      <groups>
        <tracker_settings translate="label">
          <label>Zinrelo Settings</label>
          <frontend_type>text</frontend_type>
          <sort_order>1</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <fields>
			 <tracker_partner_id translate="label">
              <label>Partner ID</label>
              <frontend_type>text</frontend_type>
			  <depends>
                <tracker_active>1</tracker_active>
              </depends>
              <sort_order>4</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </tracker_partner_id>
            <tracker_active translate="label">
              <label>Enabled</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>1</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </tracker_active>	
			<data_tracker translate="label">
              <label>Register store with Zinrelo</label>
              <frontend_type>button</frontend_type>
              <frontend_model>tracker/adminhtml_system_config_button</frontend_model>
              <sort_order>12</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
              <comment>
                <![CDATA[Click on this button to complete the rest of the program setup.]]>
			  </comment>
						</data_tracker>			
          </fields>
        </tracker_settings>
      </groups>
    </tracker>
  </sections>
</config>
